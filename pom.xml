<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.flyti.superPOMs</groupId>
		<artifactId>common</artifactId>
		<version>1.1.2</version>
	</parent>

	<groupId>com.asfusion</groupId>
	<artifactId>mate</artifactId>
	<version>0.8.9-de8-SNAPSHOT</version>
	<packaging>swc</packaging>

	<properties>
		<fdk.version>4.0.0.12027</fdk.version>
		<flex.sdk.version>4.0.0.12027</flex.sdk.version>
		<flexMojos.version>3.4-SNAPSHOT</flexMojos.version>
	</properties>

	<dependencies>
		<dependency>
			<groupId>com.adobe.flex.framework</groupId>
            <artifactId>flex-framework</artifactId>
			<type>pom</type>
		</dependency>
		<dependency>
			<groupId>org.flyti</groupId>
			<artifactId>collections</artifactId>
			<version>1.1-SNAPSHOT</version>
			<type>swc</type>
		</dependency>
		<dependency>
			<groupId>org.flyti</groupId>
			<artifactId>lang</artifactId>
			<version>1.0</version>
			<type>swc</type>
		</dependency>
	</dependencies>

	<build>
		<sourceDirectory>src</sourceDirectory>
		<plugins>
			<plugin>
				<groupId>org.sonatype.flexmojos</groupId>
				<artifactId>flexmojos-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>sources</id>
						<goals>
							<goal>sources</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<manifests>
						<manifest>
							<uri>http://mate.asfusion.com</uri>
							<includes>
								<class>com.asfusion.mate.core.EventMap</class>
								<class>com.asfusion.mate.core.LocalEventMap</class>
								<class>com.asfusion.mate.core.SmartObject</class>
								<class>com.asfusion.mate.core.Properties</class>
								<class>com.asfusion.mate.core.Property</class>
								<class>com.asfusion.mate.ioc.InjectorSettings</class>

								<class>com.asfusion.mate.actionLists.EventHandlers</class>
								<class>com.asfusion.mate.actionLists.ServiceHandlers</class>
								<class>com.asfusion.mate.actionLists.MessageHandlers</class>
								<class>com.asfusion.mate.actionLists.Injectors</class>

								<class>com.asfusion.mate.componentMap.*</class>

								<class>com.asfusion.mate.actions.DataCopier</class>
								<class>com.asfusion.mate.actions.StopHandlers</class>
								<class>com.asfusion.mate.actions.InlineInvoker</class>
								<class>com.asfusion.mate.actions.PropertyInjector</class>
								<class>com.asfusion.mate.actions.ListenerInjector</class>
								<class>com.asfusion.mate.actions.CallBack</class>
								<class>com.asfusion.mate.actions.CacheSetter</class>
								<class>com.asfusion.mate.actions.builders.ObjectBuilder</class>
								<class>com.asfusion.mate.actions.builders.*Announcer</class>
								<class>com.asfusion.mate.actions.builders.serviceClasses.Request</class>
								<class>com.asfusion.mate.actions.builders.PropertySetter</class>
								<class>com.asfusion.mate.actions.builders.*Invoker</class>

								<class>com.asfusion.mate.events.Listener</class>
								<class>com.asfusion.mate.responses.ResponseHandler</class>
								<class>com.asfusion.mate.responses.ServiceResponseHandler</class>
								<class>com.asfusion.mate.events.Dispatcher</class>
								<class>com.asfusion.mate.events.EventProperties</class>

								<class>com.asfusion.mate.utils.debug.Debugger</class>

								<class>com.asfusion.mate.testing.MockRemoteObject</class>
								<class>com.asfusion.mate.testing.MockWebService</class>
								<class>com.asfusion.mate.testing.MockMethod</class>
								<class>com.asfusion.mate.testing.MockDelegate</class>
							</includes>
						</manifest>
					</manifests>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<distributionManagement>
		<downloadUrl>http://192.168.0.7:8081/artifactory/repo</downloadUrl>
		<repository>
			<id>twp-thirdparty</id>
			<url>http://192.168.0.7:8081/artifactory/thirdparty</url>
		</repository>
	</distributionManagement>
</project>